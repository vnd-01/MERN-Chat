{
    "version": 2,
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ],
    "env": {
      "MONGODB_URI": "your-mongodb-uri",
      "JWT_SECRET": "your-jwt-secret"
    },
    "build": {
      "functions": "api",
      "websockets": {
        "forwardHeaders": "true"
      }
    }
  }
  